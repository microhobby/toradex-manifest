            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/../labs/workdir/torizon"
            },
            "args": [
                "run",
                "--rm",
                "-it",
                "--name=labs-crops",
                "-v",
                "${workspaceFolder}/../labs/workdir:/workdir",
